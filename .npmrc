# Security and reliability settings for npm

# Enforce engine compatibility - fail if Node.js/npm version doesn't match
engine-strict=true

# Save exact versions (no ^ or ~ ranges) for better reproducibility
save-exact=true

# Always use package-lock.json and fail if missing
package-lock=true

# Use npm ci for cleaner installs in CI/CD
# (This is a note - actual usage is in workflows)

# Audit automatically on install
audit=true

# Set audit level to block on high/critical vulnerabilities
# Options: info, low, moderate, high, critical, none
audit-level=moderate

# Fund messages can be disabled for cleaner CI output (optional)
fund=false

# Prevent accidental publishing of this package
# (This is a filter list repository, not a published package)

# Legacy peer deps - keep false for strict dependency resolution
legacy-peer-deps=false

# Prefer offline - use cache when possible for faster installs
prefer-offline=true

# Progress - disable in CI for cleaner logs (can be overridden)
progress=false
